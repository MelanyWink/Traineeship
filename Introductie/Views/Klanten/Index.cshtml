@model IEnumerable<Introductie.Models.Klant>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" type="text/css" href="~/css/framework.css" />

<h2>Klanten</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrouwDatum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telnr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrouwDatum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telnr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.KlantID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.KlantID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.KlantID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
